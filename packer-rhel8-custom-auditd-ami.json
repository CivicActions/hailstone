{
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "encrypt_boot": false,
    "ena_support": true,
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "RHEL-8.9.0_HVM-*x86_64*",
        "root-device-type": "ebs"
      },
      "owners": ["309956199498"],
      "most_recent": true
    },
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "{{user `ssh_username`}}",
    "ssh_pty": "true",
    "ami_name": "RHEL8-hardened-{{isotime \"2006-01-02-1504\"}}",
    "ami_groups": "{{user `ami_groups`}}",
    "ami_regions": "{{user `ami_regions`}}",
    "iam_instance_profile": "{{user `iam_instance_profile`}}",
    "associate_public_ip_address": true,
    "tags": {
      "SourceAMI": "{{ .SourceAMI }}",
      "validation_level": "{{user `validation_tag`}}"
    }


  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./ssg-rhel8-ds-custom-auditd-tailoring.xml",
      "destination": "/home/ec2-user/"
    },
    {
      "type": "file",
      "source": "./custom_privileged.rules",
      "destination": "/home/ec2-user/"
    },
    {
      "type": "shell",
      "inline": [
        "echo '****   Updating kernel   ****'",
        "sudo dnf -y update kernel kernel-tools*",
        "sudo sed -i 's/^#StopIdleSessionSec.*/StopIdleSessionSec=infinity/' /etc/systemd/logind.conf",
        "sudo systemctl reboot"
      ],
      "expect_disconnect": "true"
    },
    {
        "environment_vars": [
          "bucket={{ user `bucket_name`}}",
          "ami_name=RHEL8-hardened-{{isotime \"2006-01-02-1504\"}}"
        ],
        "type": "shell",
        "script": "setup-rhel8-custom-auditd.sh",
        "execute_command": "{{.Vars}} sudo -E -sS bash '{{.Path}}'",
        "pause_before": "40s",
        "valid_exit_codes": [0]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}

